<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beigelowopacity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Card Content View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="0dp"

            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/bahasa_isyarat"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/primary"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/custom_ripple"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/neuehaasgroteskregular"
                    android:padding="15dp"
                    android:text="Bahasa Isyarat"
                    android:textColor="@color/darkerprimary"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="15dp"
                    android:src="@drawable/hand"
                    app:tint="@color/darkerprimary">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gallery"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/primary"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/custom_ripple"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textSize="20dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkerprimary"
                        android:textStyle="bold"
                        android:fontFamily="@font/neuehaasgroteskregular">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming soon!"
                        android:textSize="12dp"
                        android:textColor="@color/darkerprimary"
                        android:textStyle="bold"
                        android:alpha=".5"
                        android:fontFamily="@font/neuehaasgroteskregular"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="15dp"
                    android:src="@drawable/img"
                    app:tint="@color/darkerprimary">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/info_aplikasi"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@color/primary"
                android:foreground="@drawable/custom_ripple"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Aplikasi"
                    android:textSize="20dp"
                    android:textColor="@color/darkerprimary"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:fontFamily="@font/neuehaasgroteskregular"
                    android:layout_gravity="center_vertical">

                </TextView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="15dp"
                    app:tint="@color/darkerprimary"
                    android:src="@drawable/info">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@color/primary"
                android:foreground="@drawable/custom_ripple"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="20dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkerprimary"
                        android:textStyle="bold"
                        android:fontFamily="@font/neuehaasgroteskregular">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming soon!"
                        android:textSize="12dp"
                        android:textColor="@color/darkerprimary"
                        android:textStyle="bold"
                        android:alpha=".5"
                        android:fontFamily="@font/neuehaasgroteskregular"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"
                    android:padding="15dp"
                    app:tint="@color/darkerprimary"
                    android:layout_gravity="end">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tutorial"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@color/primary"
                android:foreground="@drawable/custom_ripple"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                android:layout_margin="10dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutorial"
                    android:textSize="20dp"
                    android:textColor="@color/darkerprimary"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:fontFamily="@font/neuehaasgroteskregular"
                    android:layout_gravity="center_vertical">

                </TextView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="15dp"
                    app:tint="@color/darkerprimary"
                    android:src="@drawable/keys">

                </ImageView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom NavBar -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:fabCradleMargin="10dp"
                android:backgroundTint="@color/primary">

            </com.google.android.material.bottomappbar.BottomAppBar>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_camera_alt_24"
                app:layout_anchor="@id/bottomAppBar"
                app:tint="@color/primary"
                app:backgroundTint="@color/darkerprimary">

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</LinearLayout>
